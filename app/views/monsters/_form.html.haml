= form_for @monster do |f|
  - if @monster.errors.any?
    #error_explanation
      %h2= "#{pluralize(@monster.errors.count, "error")} prohibited this monster from being saved:"
      %ul
        - @monster.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :power
    = f.number_field :power
  .field
    = f.label :monster_type
    = f.select :monster_type, Monster::TYPES
  .actions
    = f.submit 'Save'
