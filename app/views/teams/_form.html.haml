= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :monsters
    = f.select :monster_ids, current_user.monsters.map{|monster| [monster.name,monster.id ]}, {},  {multiple: true}
  .actions
    = f.submit 'Save'
